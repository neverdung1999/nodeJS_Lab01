<div class="mt-5">
    <h3>Đăng khóa học</h3>
        <form method="POST" action="/course/store">
            <div class="form-group">
                <label for="name">Tên khóa học</label>
                <input type="text" name="name" class="form-control" id="name" placeholder="Enter text...">
            </div>
            <div class="form-group">
                <label for="description">Mô tả</label>
                <input type="text" name="description" class="form-control" id="description" placeholder="Enter text...">
            </div>
            <div class="form-group">
                <label for="image">Hình ảnh</label>
                <input type="text" name="image" class="form-control" id="image" placeholder="Enter text...">
            </div>
            <div class="form-group">
                <label for="videoId">Video Id</label>
                <input type="text" name="videoId" class="form-control" id="videoId" placeholder="Enter text...">
            </div>
            <div class="form-group">
                <label for="slug">Slug</label>
                <input type="text" name="slug" class="form-control" id="slug" placeholder="Enter text...">
            </div>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" id="title" placeholder="Enter text...">
            </div>
            <button type="submit" class="btn btn-primary">Đồng ý</button>
        </form> 
</div>
